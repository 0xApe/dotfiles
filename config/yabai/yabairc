#!/usr/bin/env sh

# bar settings
yabai -m config status_bar                   off
yabai -m config status_bar_text_font         "Helvetica Neue:Bold:12.0"
yabai -m config status_bar_icon_font         "FontAwesome:Regular:12.0"
yabai -m config status_bar_background_color  0xff202020
yabai -m config status_bar_foreground_color  0xffa8a8a8
yabai -m config status_bar_space_icon_strip  I II III IV V VI VII VIII IX X
yabai -m config status_bar_power_icon_strip   
yabai -m config status_bar_space_icon        
yabai -m config status_bar_clock_icon        

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config window_shadow                on
yabai -m config window_border                on
yabai -m config window_border_placement      inset
yabai -m config window_border_width          1
# yabai -m config window_border_radius         -1.0
yabai -m config active_window_border_topmost off
# yabai -m config active_window_border_color   0xff775759
# yabai -m config active_window_border_color   0xff742022
yabai -m config active_window_border_color   0xffeab003
yabai -m config normal_window_border_color   0xff505050
yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  20
yabai -m config bottom_padding               20
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   10


# float apps
yabai -m rule --add title="Preferences" manage=off # should float any preferences window for any app

yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add label="Activity Monitor" app="^Activity Monitor$" manage=off

yabai -m rule --add app="^1Password" manage=off
yabai -m rule --add app="^Drafts$" manage=off
yabai -m rule --add app="^iTunes$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^zoom.us$" manage=off
yabai -m rule --add app="^DaisyDisk$" manage=off
# float terminal as quick terminal
yabai -m rule --add app="^Terminal$" manage=off
yabai -m rule --add app="^Pastebot$" manage=off

# add Teams meeting as float
yabai -m rule --add app="^Microsoft Teams$" title=".| Microsoft Teams$" manage=off

yabai -m rule --add app="AnyConnect" manage=off

# float tweetbot non main windows
yabai -m rule --add app="^Tweetbot$" title="!Main" manage=off
yabai -m rule --add app="^Tweetbot$" title="" manage=off

# app window to display
## 1
# yabai -m rule --add app="^Alacritty$" space=^1
# yabai -m rule --add app="^Code$" space=^1

## 2
# yabai -m rule --add app="^Slack$" space=^2
# yabai -m rule --add app="^Microsoft Edge$" space=^2
# yabai -m rule --add app="^Insomnia$" space=^2
yabai -m rule --add app="^Insomnia$" manage=off
# yabai -m rule --add app="^Obsidian$" space=^2

## 3
# yabai -m rule --add app="^MailMate$" space=^3
# yabai -m rule --add app="^Calendar$" space=^3

## 4
# yabai -m rule --add app="^Brave Browser$" space=^4
yabai -m rule --add app="^Spotify$" manage=off
yabai -m rule --add app="^Mem$" manage=off
yabai -m rule --add app="^Tot$" manage=off

echo "yabai configuration loaded.."
